<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Do you have a Referral Code ?"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"/>
    <EditText
        android:id="@+id/edtCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@drawable/dialog_rectangle_shape"
        android:textSize="13sp"
        android:textColor="#000"
        android:padding="8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/redeem"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edtCode"
        android:weightSum="2">
        <TextView
            android:id="@+id/dialog_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/dialog_rectangle_shape"
            android:textColor="#c2a41d"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/dialog_submit_rectangle_shape"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>